<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.castis.castisworklogclient.View.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/mapView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:onClick="onEditWorklog"
        android:layout_below="@+id/mapView"
        android:id="@+id/workcontentText"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textMultiLine"
        android:lines="15"
        android:nestedScrollingEnabled="true"
        android:selectAllOnFocus="true"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:typeface="normal"
        android:textAlignment="viewStart"
        android:gravity="top"
        android:hapticFeedbackEnabled="true"
        android:longClickable="true"
        android:linksClickable="true"
        android:hint="Work contents"
        android:includeFontPadding="true"
        android:elegantTextHeight="false"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/border" />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/workcontentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/distanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Distance to work" />

        <TextView
            android:id="@+id/locationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="CurrentLocation" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/locationLabel"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/locationText"
            android:layout_alignBottom="@+id/locationText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/text" />

    </RelativeLayout>

    <Button
        android:layout_below="@+id/relativeLayout"
        android:text="Button"
        android:background="@color/wallet_holo_blue_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/checkBtn"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="onCheckOutSubmit"/>
</RelativeLayout>
